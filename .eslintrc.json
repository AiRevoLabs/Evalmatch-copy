{
  "root": true,
  "env": {
    "browser": true,
    "es2020": true,
    "node": true,
    "jest": true
  },
  "extends": [
    "eslint:recommended"
  ],
  "parser": "@typescript-eslint/parser",
  "plugins": ["@typescript-eslint"],
  "ignorePatterns": [
    "dist",
    "build", 
    "node_modules",
    "*.d.ts",
    "vite.config.ts",
    "jest.config.*",
    "monitoring-logs/**",
    "performance-reports/**",
    "scripts/**"
  ],
  "parserOptions": {
    "ecmaVersion": "latest",
    "sourceType": "module",
    "project": "./tsconfig.json"
  },
  "rules": {
    "no-unused-vars": "off",
    "@typescript-eslint/no-unused-vars": "warn",
    "no-console": "off",
    "no-undef": "off",
    "no-redeclare": "off",
    "@typescript-eslint/no-redeclare": "warn",
    "no-empty": "warn",
    "@typescript-eslint/no-explicit-any": "off",
    "@typescript-eslint/ban-ts-comment": "off"
  },
  "overrides": [
    {
      "files": ["*.js"],
      "extends": ["eslint:recommended"],
      "rules": {
        "no-unused-vars": "warn",
        "no-undef": "warn"
      }
    }
  ]
}