{
  "root": true,
  "env": {
    "browser": true,
    "es2020": true,
    "node": true,
    "jest": true
  },
  "extends": [
    "eslint:recommended"
  ],
  "ignorePatterns": [
    "dist",
    "build", 
    "node_modules",
    "*.d.ts",
    "vite.config.ts",
    "jest.config.*",
    "monitoring-logs/**",
    "performance-reports/**",
    "scripts/**"
  ],
  "parserOptions": {
    "ecmaVersion": "latest",
    "sourceType": "module"
  },
  "rules": {
    "no-unused-vars": "warn",
    "no-console": "off",
    "no-undef": "warn",
    "no-redeclare": "warn",
    "no-empty": "warn"
  }
}